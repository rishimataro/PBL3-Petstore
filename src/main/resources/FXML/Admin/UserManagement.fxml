<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="442.0" prefWidth="990.0" stylesheets="@../../Styles/Admin/AdminCommon.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.store.app.petstore.Controllers.Admin.UserManagementController">
    <children>
        <fx:include source="AdminMenu.fxml" />
        <AnchorPane fx:id="root" layoutY="14.0" prefHeight="442.0" prefWidth="990.0" styleClass="search-section" AnchorPane.topAnchor="0.0">
            <children>
                <TextField fx:id="searchTextField" layoutX="13.0" layoutY="15.0" prefHeight="30.0" prefWidth="270.0" promptText="Tìm kiếm tài khoản" styleClass="find-textfield" />
                <FontAwesomeIconView fx:id="searchIcon" glyphName="SEARCH" layoutX="24.0" layoutY="34.0" size="13" styleClass="icon" />
                <FontAwesomeIconView fx:id="closeIcon" glyphName="CLOSE" layoutX="262.0" layoutY="35.0" styleClass="icon">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </FontAwesomeIconView>

                <ChoiceBox fx:id="roleChoiceBox" layoutX="305.0" layoutY="15.0" prefWidth="110.0" styleClass="filter-combo-box" />
                <ChoiceBox fx:id="statusChoiceBox" layoutX="423.0" layoutY="14.0" prefWidth="110.0" styleClass="filter-combo-box" />

                <TableView fx:id="accountTableView" layoutX="13.0" layoutY="53.0" prefHeight="380.0" prefWidth="965.0">
                    <columns>
                        <TableColumn fx:id="colID" styleClass="stt-column" text="ID" />
                        <TableColumn fx:id="colUsername" text="Tên đăng nhập" />
                        <TableColumn fx:id="colPassword" text="Mật khẩu" />
                        <TableColumn fx:id="colRole" text="Vai trò" />
                        <TableColumn fx:id="colDateCreate" text="Ngày tạo" />
                        <TableColumn fx:id="colStatus" text="Tình trạng" />
                    </columns>
                </TableView>

                <Button fx:id="addAccountButton" layoutX="543.0" layoutY="13.0" mnemonicParsing="false" styleClass="add-button" text="Thêm tài khoản" />
                <Button fx:id="viewDetailsButton" layoutX="649.0" layoutY="13.0" mnemonicParsing="false" styleClass="add-button" text="Xem chi tiết" />
            </children>
        </AnchorPane>
    </children>
</VBox>
