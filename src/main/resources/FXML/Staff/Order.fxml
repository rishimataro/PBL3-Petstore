                        <TextField fx:id="searchTextField" layoutX="14.0" layoutY="14.0" prefHeight="30.0" prefWidth="270.0" promptText="Tìm kiếm sản phẩm" styleClass="find-textfield" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="15.0" />
